<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtHasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Hasil Notifikasi"
        android:layout_marginBottom="200dp"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/txtNotif"
        android:layout_width="140dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Test Notif"
        android:layout_marginBottom="20dp"
        android:padding="15dp"
        android:shadowRadius="45"
        android:background="@drawable/bg_button_borde"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="cancel notif"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_button_full"
        />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="update"
        android:background="@drawable/bg_button_full"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <EditText
            android:id="@+id/edtText"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginRight="12dp"
            android:paddingLeft="8dp"
            android:hint="Ketik Pesan"
            android:background="@drawable/bg_button_borde"/>

        <ImageButton
            android:id="@+id/btnSend"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_send_green_24dp"
            android:background="@drawable/bg_button_full" />

    </LinearLayout>

</LinearLayout>